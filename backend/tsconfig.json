{
  "compilerOptions": {                          // Use modern JavaScript features
    "module": "ESNext",       // or "ES2022"
    "target": "ES2022",                     // For Node.js compatibility
    "rootDir": ".",                           // Your code is in both root (server.ts) and src/
    "outDir": "dist",                         // Compiled output goes to /dist
    "strict": true,                           // Enable strict type-checking
    "esModuleInterop": true,                  // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true, // Avoid case-related import bugs
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,                      // Skip type checks on libraries for speed
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "dist", "public"]
}
